<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('<%= cl_image_path("ttkxtk6p3uis0txhcj0j", height: 300, width: 400, crop: :fill)%>')">
  <div class="banner-content">
    <h1>Cocktails Recipes</h1>
    <p>The best cocktails you've ever made!</p>
    <%= link_to 'Add a new cocktail', new_cocktail_path, class:'btn btn-primary btn-lg' %>
  </div>
</div>

  <div class="cards">
    <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
      url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>')">
      <div class="card-category">Popular</div>
      <div class="card-description">
        <%= link_to cocktail.name, cocktail_path(cocktail) %>
      </div>
      </div>
      </div>
    <% end %>
  </div>
</div>

<div class="container">
  <h1><%= @cocktail.name %></h1>
  <div class="ingredients">
    <h3>Ingredients</h3>
    <ul>
      <% @cocktail.doses.each do |dose| %>
        <li><%= dose.ingredient.name %> - <%= dose.description %></li>
        <%= link_to 'Delete', cocktail_dose_path(@cocktail, dose), method: :delete %>
      <% end %>
    </ul>
  </div>
  <div>
    <%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail), class:'btn btn-primary'%>
  </div>

  <%= link_to 'Back to list', cocktails_path %>
</div>
